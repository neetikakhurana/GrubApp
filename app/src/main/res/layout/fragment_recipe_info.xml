<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.lecture.nitika.grub.RecipeInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txtView_recipeInfo_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_Title_size"
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/image_recipeInfo"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_Ingrediants"
                android:layout_height="match_parent"
                android:text="@string/Ingrediants"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/btn_Directions"
                android:text="@string/Directions"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/txtView_recipeInfo_Description"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:textSize="@dimen/txt_ingredients_size"
            android:layout_weight="8"/>
    </LinearLayout>
</LinearLayout>
